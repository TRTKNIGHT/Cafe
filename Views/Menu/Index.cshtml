                            <div class="d-flex flex-column justify-content-between item-price">
                                <h6 class="card-title">@item.Name</h6>
                                <h6 class="card-title">@item.Price</h6>
                                @if (!string.IsNullOrEmpty(item.Description))
                                {
                                    <h6 class="desc-container pb-2 px-0" style="font-size: 0.8rem">@item.Description</h6>
                                }
                            </div>
                            
                        </div>
                    </div>
                    <div class="col-5 col-md-3 image-container">
                        <img src="https://tse4.mm.bing.net/th?id=OIG2.UPHt2djgtahPZRLMAK26&pid=ImgGn" class="img-fluid rounded-start" />
                    </div>
                </div>
            </div>
        }
    </div>
    <div class="collapse" id="shakesAndIceCreams">
        @foreach (var item in Model.ShakesAndIceCreams)
        {
            <div class="card mb-3">
                <div class="row g-0" style="width: 100%; margin: auto;">
                    <div class="col-7 col-md-9" style="position: relative;">
                        <div class="card-body">
                            <div class="d-flex flex-column justify-content-between item-price" style="padding-left: 0;">
                                <h6 class="card-title" style="flex-wrap: nowrap; font-size: 0.94rem;">@item.Name</h6>
                                <h6 class="card-title">@item.Price</h6>
